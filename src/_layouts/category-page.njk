{% extends './centered-page.njk' %}

{% set articles = collections.groups.articles[category] %}

{% block centeredPageContent %}
  <h2 class="mb-4">{{ title }}</h2>
  <ul>
    {% for article in articles %}
      <li>
        <a href="{{ article.url }}">{{ article.title }}</a>
      </li>
    {% endfor %}
  </ul>
{% endblock centeredPageContent %}
